<preference-headers xmlns:android="http://schemas.android.com/apk/res/android" >

   <header
        android:title="@string/user_interface" />

    <!-- Animations -->
    <header
        android:id="@+id/animation_controls"
        android:fragment="com.carbon.settings.fragments.AnimationControls"
        android:title="@string/title_animation_controls"
        android:icon="@drawable/ic_carbon_animations" />

    <!-- Halo -->
    <header
        android:id="@+id/halo"
        android:fragment="com.carbon.settings.fragments.halo.HaloTab"
        android:title="@string/halo_title"
        android:icon="@drawable/ic_carbon_halo" />

    <!-- Interface -->
    <header
        android:id="@+id/interface_settings"
        android:fragment="com.carbon.settings.fragments.inter.InterfaceTab"
        android:title="@string/user_interface"
        android:icon="@drawable/ic_carbon_interface" />

    <!-- Lock screen -->
    <header
        android:id="@+id/lock_screen_settings"
        android:fragment="com.carbon.settings.fragments.lockscreen.LockscreenTab"
        android:title="@string/lockscreen_title"
        android:icon="@drawable/ic_carbon_lockscreen" />

    <!-- Navigation -->
    <header
        android:id="@+id/nav_bar"
        android:fragment="com.carbon.settings.fragments.navbar.NavigationTab"
        android:title="@string/navbar_title"
        android:icon="@drawable/ic_carbon_navbar" />

    <!-- Pie controls -->
    <header
        android:id="@+id/pie_controls"
        android:fragment="com.carbon.settings.fragments.pie.PieTab"
        android:title="@string/pie_controls_title"
        android:icon="@drawable/ic_carbon_pie" />

    <!-- Power menu -->
    <header
        android:id="@+id/power_menu"
        android:fragment="com.carbon.settings.fragments.PowerMenu"
        android:title="@string/power_menu_title"
        android:icon="@drawable/ic_carbon_powermenu"
        android:summary="@string/header_summary" />

    <!-- Ribbon -->
    <header
        android:id="@+id/ribbon_targets"
        android:fragment="com.carbon.settings.fragments.ribbon.RibbonTargets"
        android:title="@string/ribbon_settings_title"
        android:icon="@drawable/ic_carbon_ribbon" />

    <!-- Statusbar -->
    <header
        android:id="@+id/status_bar"
        android:fragment="com.carbon.settings.fragments.statusbar.StatusBarTab"
        android:title="@string/status_bar_title"
        android:icon="@drawable/ic_carbon_statusbar" />

   <header
        android:title="@string/system" />

   <header
        android:id="@+id/device_tools"
        android:fragment="com.carbon.settings.device.DeviceTools"
        android:title="@string/device_tools_title"
        android:icon="@drawable/ic_carbon_device" />

   <header
   	android:id="@+id/more_device_settings"
        android:title="@string/more_device_controls_title"
        android:breadCrumbTitle="@string/more_device_settings_title"
        android:fragment="com.carbon.settings.fragments.MoreDeviceSettings"
        android:icon="@drawable/ic_carbon_device" />

</preference-headers>
